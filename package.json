{
	"name": "@atlassianlabs/figma-for-jira",
	"version": "1.0.0",
	"repository": "git@github.com:atlassian-labs/figma-for-jira.git",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "rimraf build && tsc --project ./tsconfig.build.json",
		"build:check": "tsc --noEmit",
		"createEnvFile": "ts-node ./scripts/create-env-file.ts",
		"db:it:prepare": "dotenv -e .env.test -- prisma migrate reset -f && prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:generate": "prisma generate",
		"jira:installApp": "./scripts/app-install.sh",
		"start": "tsnd -r dotenv-expand/config --inspect --watch='.env' --respawn -- src/server.ts",
		"start:sandbox": "./scripts/start-sandbox.sh",
		"start:tunnel": "run-p util:makeTunnel util:updateAppUrl",
		"stop:sandbox": "docker-compose down",
		"test": "run-s test:unit test:it",
		"test:it": "DOTENV_CONFIG_PATH=.env.test jest -c jest.config.integration.ts",
		"test:it:ci": "run-s start:sandbox db:it:prepare test:it stop:sandbox",
		"test:unit": "jest -c jest.config.unit.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --write",
		"format:check": "prettier . --check"
	},
	"dependencies": {
		"@prisma/client": "^5.1.1",
		"atlassian-jwt": "^2.0.2",
		"axios": "^1.4.0",
		"express": "^4.18.2",
		"pino": "^8.15.0",
		"pino-http": "^8.4.0",
		"prisma": "^5.1.1",
		"tslib": "^2.6.1",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.16",
		"@types/jest": "^29.5.3",
		"@types/node": "^18.17.1",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"dotenv": "^16.3.1",
		"dotenv-cli": "^7.3.0",
		"dotenv-expand": "^10.0.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-import": "^2.28.0",
		"husky": "^8.0.3",
		"jest": "^29.6.2",
		"nock": "^13.3.3",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^10.2.0",
		"prettier": "^3.0.2",
		"rimraf": "^5.0.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.1.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "sh hooks/pre-commit"
		}
	},
	"engines": {
		"node": ">= 18"
	}
}
