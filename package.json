{
	"name": "@atlassianlabs/figma-for-jira",
	"version": "1.0.0",
	"repository": "git@github.com:atlassian-labs/figma-for-jira.git",
	"license": "MIT",
	"private": false,
	"scripts": {
		"build": "rimraf build && tsc --project ./tsconfig.build.json",
		"build:check": "tsc --noEmit",
		"createEnvFile": "ts-node ./scripts/create-env-file.ts",
		"db:migrate": "prisma migrate dev",
		"db:generate": "prisma generate",
		"jira:installApp": "./scripts/app-install.sh",
		"start": "tsnd --inspect --watch='.env' --respawn src/server.ts",
		"start:sandbox": "docker-compose --env-file=.env up --detach",
		"start:sandbox:ci": "docker-compose --env-file=.env.test up --detach",
		"start:tunnel": "run-p util:makeTunnel util:updateAppUrl",
		"stop:sandbox": "docker-compose down",
		"test": "DOTENV_CONFIG_PATH=.env.test jest -c jest.config.json",
		"test:it": "DOTENV_CONFIG_PATH=.env.test jest -c jest.config.it.json",
		"test:unit": "jest -c jest.config.unit.json",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"util:makeTunnel": "./scripts/make-tunnel.sh",
		"util:updateAppUrl": "ts-node ./scripts/update-app-url.ts"
	},
	"dependencies": {
		"@prisma/client": "^5.1.1",
		"atlassian-jwt": "^2.0.2",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"pino": "^8.15.0",
		"pino-http": "^8.4.0",
		"prisma": "^5.1.1",
		"tslib": "^2.6.1",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.16",
		"@types/jest": "^29.5.3",
		"@types/node": "^18.17.1",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.0",
		"eslint-plugin-import": "^2.28.0",
		"husky": "^8.0.3",
		"jest": "^29.6.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.1",
		"pino-pretty": "^10.2.0",
		"prettier": "^3.0.2",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.1.6"
	},
	"husky": {
		"hooks": {
			"pre-commit": "sh hooks/pre-commit"
		}
	},
	"engines": {
		"node": ">= 18"
	}
}
